</head>
<body>
  <div class="container">
    <h1><span id="nomePersonagem" onclick="mudarNome()">Tamagotchi</span></h1>
    <div class="tamagotchi" id="tamagotchi">ğŸ¶</div>
    <div class="hud" id="hud">ğŸ˜„ Felicidade: 100% | ğŸ˜‹ Fome: 100% | ğŸ’¤ Energia: 100%</div>
    <button class="button" onclick="alimentar()">ğŸ” Alimentar</button>
    <button class="button" onclick="brincar()">ğŸ¾ Brincar</button>
    <button class="button" onclick="descansar()">ğŸ’¤ Descansar</button>
    <br> <!-- Quebra de linha para separar as opÃ§Ãµes de animal da HUD -->
    <div class="animal-options">
      <div class="animal-text">Escolha o seu animal:</div>
      <button class="button" onclick="trocarAnimal('ğŸ¶')">ğŸ¶</button>
      <button class="button" onclick="trocarAnimal('ğŸ±')">ğŸ±</button>
      <button class="button" onclick="trocarAnimal('ğŸ°')">ğŸ°</button>
      <button class="button" onclick="trocarAnimal('ğŸ¦Š')">ğŸ¦Š</button>
    </div>
  </div>

  <script>
    // VariÃ¡veis para controlar o estado do Tamagotchi
    let felicidade = 100;
    let fome = 100;
    let energia = 100;
    let animalEmoji = 'ğŸ¶';
    let nomePersonagem = 'Tamagotchi';

    // FunÃ§Ã£o para atualizar a exibiÃ§Ã£o do Tamagotchi
    function updateTamagotchi() {
      const tamagotchiElement = document.getElementById('tamagotchi');
      tamagotchiElement.textContent = animalEmoji;
      tamagotchiElement.style.opacity = felicidade / 100;

      // Atualizar o HUD com as informaÃ§Ãµes de fome, felicidade e energia usando emojis
      const hudElement = document.getElementById('hud');
      const felicidadeEmoji = getEmojiByFelicidade(felicidade);
      const fomeEmoji = getEmojiByFome(fome);
      const energiaEmoji = getEmojiByEnergia(energia);
      hudElement.innerHTML = `${felicidadeEmoji} Felicidade: ${felicidade}% | ${fomeEmoji} Fome: ${fome}% | ${energiaEmoji} Energia: ${energia}%`;
      
      // Atualizar o nome do personagem no tÃ­tulo
      const nomePersonagemElement = document.getElementById('nomePersonagem');
      nomePersonagemElement.textContent = nomePersonagem;
    }

    // FunÃ§Ã£o para obter o emoji de felicidade com base no valor
    function getEmojiByFelicidade(felicidade) {
      if (felicidade >= 80) {
        return 'ğŸ˜„';
      } else if (felicidade >= 50) {
        return 'ğŸ˜Š';
      } else if (felicidade >= 20) {
        return 'ğŸ˜';
      } else {
        return 'ğŸ˜¢';
      }
    }

    // FunÃ§Ã£o para obter o emoji de fome com base no valor
    function getEmojiByFome(fome) {
      if (fome >= 80) {
        return 'ğŸ˜‹';
      } else if (fome >= 50) {
        return 'ğŸ˜';
      } else if (fome >= 20) {
        return 'ğŸ˜Ÿ';
      } else {
        return 'ğŸ˜«';
      }
    }

    // FunÃ§Ã£o para obter o emoji de energia com base no valor
    function getEmojiByEnergia(energia) {
      if (energia >= 80) {
        return 'ğŸ’¤';
      } else if (energia >= 50) {
        return 'ğŸ˜´';
      } else if (energia >= 20) {
        return 'ğŸ˜«';
      } else {
        return 'ğŸ˜µ';
      }
    }

    // FunÃ§Ã£o para trocar o animal do Tamagotchi
    function trocarAnimal(novoAnimalEmoji) {
      animalEmoji = novoAnimalEmoji;
      updateTamagotchi();
    }

    // FunÃ§Ã£o para mudar o nome do personagem usando uma caixa de diÃ¡logo
    function mudarNome() {
      const novoNome = window.prompt('Digite o nome do personagem:', nomePersonagem);
      if (novoNome !== null && novoNome.trim() !== '') {
        nomePersonagem = novoNome.trim();
        updateTamagotchi();
      }
    }

    // FunÃ§Ã£o para alimentar o Tamagotchi
    function alimentar() {
      fome += 20;
      if (fome > 100) {
        fome = 100;
      }
      felicidade += 10;
      if (felicidade > 100) {
        felicidade = 100;
      }
      energia -= 5;
      if (energia < 0) {
        energia = 0;
      }
      updateTamagotchi();
    }

    // FunÃ§Ã£o para brincar com o Tamagotchi
    function brincar() {
      felicidade += 20;
      if (felicidade > 100) {
        felicidade = 100;
      }
      fome -= 20; // Agora o Tamagotchi fica com fome ao brincar
      if (fome < 0) {
        fome = 0;
      }
      energia -= 10;
      if (energia < 0) {
        energia = 0;
      }
      updateTamagotchi();
    }

    // FunÃ§Ã£o para descansar o Tamagotchi
    function descansar() {
      energia += 40;
      if (energia > 100) {
        energia = 100;
      }
      felicidade += 10;
      if (felicidade > 100) {
        felicidade = 100;
      }
      fome -= 5;
      if (fome < 0) {
        fome = 0;
      }
      updateTamagotchi();
    }

    // Reduz a fome, felicidade e energia ao longo do tempo
    setInterval(function() {
      fome -= 1.25; // DiminuÃ­mos pela metade a perda de fome
      if (fome < 0) {
        fome = 0;
      }
      felicidade -= 1.25; // DiminuÃ­mos pela metade a perda de felicidade
      if (felicidade < 0) {
        felicidade = 0;
      }
      energia -= 0.5; // DiminuÃ­mos pela metade a perda de energia
      if (energia < 0) {
        energia = 0;
      }
      updateTamagotchi();
    }, 5000); // Atualiza a cada 5 segundos

    // Atualizar a exibiÃ§Ã£o do Tamagotchi ao carregar a pÃ¡gina
    updateTamagotchi();
  </script>
</body>
</html>
